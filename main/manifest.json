{
    "name": "AI Chat Studio",
    "short_name": "AI Chat Studio",
    "description": "Advanced multi-model AI chat interface with voice, search, templates, and export features",
    "version": "2.0.0",
    "start_url": "./index.php",
    "display": "standalone",
    "background_color": "#0f172a",
    "theme_color": "#667eea",
    "orientation": "portrait-primary",
    "scope": "./",
    "lang": "en-US",
    "dir": "ltr",
    "categories": ["productivity", "utilities", "communication"],
    "icons": [
        {
            "src": "assets/icons/icon.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any"
        }
    ],
    "shortcuts": [
        {
            "name": "New Chat",
            "short_name": "New",
            "description": "Start a new conversation",
            "url": "./index.php?action=new-chat",
            "icons": [
                {
                    "src": "assets/icons/shortcut-new-chat.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Search",
            "short_name": "Search",
            "description": "Search conversations",
            "url": "./index.php?action=search",
            "icons": [
                {
                    "src": "assets/icons/shortcut-search.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Templates",
            "short_name": "Templates",
            "description": "Browse conversation templates",
            "url": "./index.php?action=templates",
            "icons": [
                {
                    "src": "assets/icons/shortcut-templates.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Settings",
            "short_name": "Settings",
            "description": "Configure app settings",
            "url": "./pages/settings.php",
            "icons": [
                {
                    "src": "assets/icons/shortcut-settings.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "screenshots": [
        {
            "src": "assets/screenshots/desktop-chat.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Main chat interface on desktop"
        },
        {
            "src": "assets/screenshots/mobile-chat.png",
            "sizes": "360x640",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Chat interface on mobile"
        },
        {
            "src": "assets/screenshots/templates.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Conversation templates browser"
        },
        {
            "src": "assets/screenshots/settings.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Advanced settings interface"
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "permissions": [
        "microphone",
        "storage",
        "notifications"
    ],
    "protocol_handlers": [
        {
            "protocol": "web+ai",
            "url": "./index.php?shared=%s"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": "navigate-existing"
    }
}